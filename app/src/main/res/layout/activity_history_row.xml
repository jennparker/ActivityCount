<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/recyclerview_item_margin">

    <TextView
        android:id="@+id/activity_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/date_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/activity_item_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/activity_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_item_date" />

    <TextView
        android:id="@+id/activity_item_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/activity_text_size"
        app:layout_constraintEnd_toStartOf="@id/activity_item_three"
        app:layout_constraintStart_toEndOf="@id/activity_item_one"
        app:layout_constraintTop_toBottomOf="@id/activity_item_date" />

    <TextView
        android:id="@+id/activity_item_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/activity_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_item_date" />

</androidx.constraintlayout.widget.ConstraintLayout>